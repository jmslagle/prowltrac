# PlexTrac Configuration
PLEXTRAC_URL=https://yourapp.plextrac.com

# Optional: Only set these if you want to avoid interactive login
# Note: For security, consider using token caching instead
# PLEXTRAC_USERNAME=your_username
# PLEXTRAC_PASSWORD=your_password
# PLEXTRAC_MFA_TOKEN=optional_mfa_token

# Authentication & Token Caching
USE_TOKEN_CACHE=true
INTERACTIVE_LOGIN=false
FORCE_NEW_LOGIN=false
AUTO_CLEANUP_TOKENS=true

# Default Filter Settings
DEFAULT_FILTER_PRESET=security_review
MAX_FINDINGS_PREVIEW=100
BATCH_SIZE=25

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=prowltrac.log

# Import Settings
AUTO_CREATE_REPORTS=false
DEFAULT_REPORT_TEMPLATE_ID=